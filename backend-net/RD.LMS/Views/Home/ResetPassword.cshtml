@{
    ViewBag.Title = "ResetPassword";
    
}
@model RD.LMS.Models.ResetPasswordModel
<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">RD LMS</a>
        </div>
    </div>
</nav>
<div class="container">

    <div class="page-header">
        <h1>Reestablecer Contraseña</h1>
    </div>

    @if (Model.Message.Contains("Denegado"))
    {
        <p>
            @Model.Message    
        </p>
        <a href="#" onclick="window.close();">cerrar ventana</a>
    }
    else
    {
        <form id="login-form" class="row" method="post" name="login-form">
            <div class="col-sm-6">
                <input type="hidden" value="@Model.Id" name="Id" id="Id"/>
                <div class="form-group">
                    <label for="input-password">Contraseña</label>
                    <input type="password" class="form-control" id="input-password" name="input-password" placeholder="">
                </div>
                <div class="form-group">
                    <label for="input-retype-password">Repita Contraseña</label>
                    <input type="password" class="form-control" id="input-retype-password" name="input-retype-password" placeholder="">
                </div>
                <button type="submit" class="btn btn-primary">Actualizar</button><br/>
                @Model.Message
            </div>
        </form>
    }
    


</div>